<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Jotting.Widget.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Jotting.Widget.TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-thick</item>
    </style>

    <style name="JottingList_Header" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/jotting_list_item_header_textsize</item>
        <item name="android:textColor">@color/jotting_list_item_color_selector</item>
    </style>

    <style name="JottingList_Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/jotting_list_item_body_textsize</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="JottingDetail.Header.TextAppearance" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/jotting_detail_header_textsize</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="JottingDetail.Body.TextAppearance" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/jotting_detail_body_textsize</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

</resources>
